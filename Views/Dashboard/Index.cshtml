@model DashboardProViewModel

<div class="container-fuild">
    <!-- Title -->
    <div class="page-title">
        <div class="title__dashboard">
            <p>Dashboard</p>
        </div>
        <div class="title__dashboardchild">
            <a href="#">Dashboard</a>
            <span>/</span>
            <p>Dashboard</p>
        </div>
    </div>
    <!-- content -->
    <div class="main__contain">
        <div class="content__left">
            <div class="card__left">
                <div class="card-primary__left">
                    <div class="card-titles">
                        <h5 class="text-primary">Welcome back!</h5>
                        <p>Chickin</p>
                    </div>
                    <div class="card-imgs">
                        <img src="~/images/profile-img.png"
                             style="height: 100px"
                             alt="" />
                    </div>
                </div>
                <div class="card-body__left">
                    <div class="profile">
                        <div class="avatar">
                            <img src="~/images/avatar-1.jpg" style="height: 70px" alt="">
                        </div>
                        <h5>Khanh Vg</h5>
                        <p>UI/UX Designer</p>
                    </div>
                    <div class="parameter-profile">
                        <a href="#" class="view-profile">View Profile <i class="fas fa-arrow-right"></i></a>
                    </div>
                </div>
            </div>
            <div class="card__left">
                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th>Product ID</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Products)
                            {
                                <tr>
                                    <td><a href="#">@item.ProductID</a></td>
                                    <td>@item.ProductName</td>
                                    <td>@item.Price.ToString("c")</td>
                                    <td>
                                        @if (@item.Status == 1)
                                        {
                                            <span class="success-brd">Action</span>
                                        }
                                        else
                                        {
                                            <span class="warning-brd">No Action</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div page-model="@Model.PagingInfo" page-action="Index"
                         page-classes-enabled="true"
                         page-class="btn" page-class-normal="btn-outline-dark"
                         page-class-selected="btn-primary"
                         class="btn-group pull-right m-1">
                    </div>
                </div>
            </div>
        </div>
        <div class="content__right">
            <!-- parameter -->
            <div class="parameter">
                <div class="parameter__content">
                    <div class="media">
                        <div class="media-body">
                            <p>Orders</p>
                            <h4>@Model.Revenue.TotalOrder</h4>
                        </div>
                        <div class="media-avatar">
                            <i class="far fa-clone"></i>
                        </div>
                    </div>
                </div>
                <div class="parameter__content">
                    <div class="media">
                        <div class="media-body">
                            <p>Revenue</p>
                            <h4>@Model.Revenue.TotalPrice.ToString("c")</h4>
                        </div>
                        <div class="media-avatar">
                            <i class="fas fa-calendar-week"></i>
                        </div>
                    </div>
                </div>
                <div class="parameter__content">
                    <div class="media">
                        <div class="media-body">
                            <p>Average Price</p>
                            <h4>@Model.Revenue.AveragePrice.ToString("c")</h4>
                        </div>
                        <div class="media-avatar">
                            <i class="fas fa-tag"></i>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Chart.js -->
            <div class="chart">
                <canvas id="myChart"></canvas>
            </div>
            <!--  -->
        </div>
    </div>

    <!-- card -->
    <div class="card-content">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Latest Transaction</h4>
                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Date</th>
                                <th>Total</th>
                                <th>Payment Status</th>
                                <th>Payment Method</th>
                                <th>View Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Orders)
                            {
                                <tr>
                                    <td><a href="#">@item.OrderID</a></td>
                                    <td>@item.dateTime</td>
                                    <td>@item.TotalPrice.ToString("c")</td>
                                    <td>
                                        @if (@item.PaymentStatus == true)
                                        {
                                            <span class="success-brd">Paid</span>
                                        }
                                        else
                                        {
                                            <span class="warning-brd">Unpaid</span>
                                        }
                                    </td>
                                    <td>
                                        @if (@item.PaymentMethod == 1)
                                        {
                                            <span class="success-brd">Paypal</span>
                                        }
                                        else
                                        {
                                            if (@item.PaymentMethod == 2)
                                            {
                                                <span class="success-brd">COD</span>
                                            }
                                        }
                                    </td>
                                    <td>
                                        <a class="view-detail btn">View Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div page-model="@Model.PagingOrder" page-action="Index"
                         page-classes-enabled="true"
                         page-class="btn" page-class-normal="btn-outline-dark"
                         page-class-selected="btn-primary"
                         class="btn-group pull-right m-1">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

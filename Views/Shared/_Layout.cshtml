                    </div>
                    <div class="pillar">
                        <ul class="layouts">
                            <li class="menu-title">Component</li>
                            <li>
                                <a href="#"><i class="fab fa-r-project"></i>Project</a>
                            </li>
                            <li>
                                <a class="item"><i class="fas fa-tasks"></i> Tasks</a>
                                <ul class="child-layout">
                                    <li><a href="#">Vertical</a></li>
                                    <li><a href="#">Horizontol</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>*@
            </div>
            <div class="main-content">
                <div class="page-content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </main>
    <footer></footer>
    <script src="js/vertical-menu.js"></script>
    <script src="https://code.jquery.com/jquery-3.x-git.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <partial name="_ValidationScriptsPartial" />
    <vc:chart-dashboard />
    @RenderSection("Scripts", required: false)
</body>
</html>

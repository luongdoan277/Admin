                        <ul class="layouts">
                            <li class="menu-title">Page</li>
                            <li>
                                <a href="#"><i class="far fa-envelope"></i> Email</a>
                            </li>
                            <li>
                                <a class="item"><i class="fas fa-border-all"></i> Invoice</a>
                                <ul class="child-layout">
                                    <li><a href="#">Vertical</a></li>
                                    <li><a href="#">Horizontol</a></li>
                                </ul>
